<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="현재 미세먼지 농도는 \n\n\n\n\n ug 입니다.\n\n"
        android:textAlignment="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="50ug 이상 : 나쁨 / 30ug 이하 : 좋음\n\n\n\n\n\n\n\n\n\n\n"
        android:textAlignment="center"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/txtSpeechInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="음성인식"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/receiveString"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-46dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="226dp"
        android:layout_height="227dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="81dp"
        android:layout_marginBottom="35dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cro" />

    <Button
        android:id="@+id/btnBluetooth"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txtSpeechInput"
        android:layout_centerHorizontal="true"
        android:text="블루투스 연결"
        android:textSize="30dp"/>


</RelativeLayout>